{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5555/",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "WcfRust",
    "version": "39.4.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "dialog": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**", "https://**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.iamteer.wcf",
      "icon": [
        "icons/icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "./src/wcferry/lib", 
        "./icons", 
        "./config.json5"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["zh-CN"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [{
      "fullscreen": false,
      "minHeight": 900,
      "resizable": true,
      "title": "WcfRust",
      "minWidth": 1200,
      "center" : true
    }]
  }
}